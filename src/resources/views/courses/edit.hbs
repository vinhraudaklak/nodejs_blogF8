<div class="mt-4">
	<h3>
		Cập nhật khóa học
	</h3>
	<form method="POST" action="/courses/{{course._id}}?_method=PUT" class="mt-4">
		<div class="form-group">
			<label for="name">Tên khóa học</label>
			<input
				value="{{course.name}}"
				type="text"
				class="form-control"
				name="name"
				id="name"
			/>
		</div>

		<div class="form-group">
			<label for="image">Image</label>
			<input
				value="{{course.image}}"
				type="text"
				class="form-control"
				name="image"
				id="image"
			/>
		</div>

		<div class="form-group">
			<label for="description">Mô tả khóa học</label>
			<textarea
				class="form-control"
				name="description"
				id="description"
			>{{course.description}}</textarea>
		</div>

		<div class="form-group">
			<label for="videoId">VideoId</label>
			<input
				value="{{course.videoId}}"
				type="text"
				class="form-control"
				name="videoId"
				id="videoId"
			/>
		</div>

		<div class="form-group">
			<label for="level">level</label>
			<input
				value="{{course.level}}"
				type="text"
				class="form-control"
				name="level"
				id="level"
			/>
		</div>
		<button type="submit" class="btn btn-primary">Lưu lại</button>
	</form>
</div>